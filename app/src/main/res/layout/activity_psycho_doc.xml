<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cogentdatasolutions.mydoctorapp.information.PsychoDoc">

    <include
        layout="@layout/toolbar"
        android:id="@+id/phsycho_tool_doc"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/nara_derm_doc"
        android:src="@drawable/narasimha"
        android:layout_below="@id/phsycho_tool_doc"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/dr_narasimha"
        android:id="@+id/naraTv"
        android:layout_above="@+id/nara_tv_doc"
        android:layout_toEndOf="@+id/nara_derm_doc" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/psychiatrist"
        android:id="@+id/nara_tv_doc"
        android:layout_alignBottom="@+id/nara_derm_doc"
        android:layout_alignStart="@+id/naraTv" />


</RelativeLayout>
